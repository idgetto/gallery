<h1>Add an artwork</h1>

<%= form_for @work do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %><br>

	<%= f.label :artist %>
	<%= f.text_field :artist %><br>

	<%= f.label :price %>
	<%= f.text_field :price, precision: 2 %><br>

	<%= f.label :medium %>
	<%= f.text_field :medium %><br>

	<%= f.label :date %>
	<%= f.datetime_select :date %><br>

	<%= f.label :current_location %>
	<%= f.text_field :current_location %><br>

	<%= f.label :created_location %>
	<%= f.text_field :created_location %>

	<%= f.submit "Add artwork" %>

<% end %>