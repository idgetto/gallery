<h1>Add an artwork</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for @work do |f| %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :artist %>
			<%= f.text_field :artist %>

			<%= f.label :price %>
			<%= f.text_field :price, precision: 3 %>

			<%= f.label :medium %>
			<%= f.text_field :medium %>

			<%= f.label :date %>
			<%= f.date_select :date %>

			<%= f.label :current_location %>
			<%= f.text_field :current_location %>

			<%= f.label :created_location %>
			<%= f.text_field :created_location %>

			<%= f.submit "Add artwork", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>